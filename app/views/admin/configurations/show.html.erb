<% throw_content :right do %>
  <h4>Settings</h4>
  <p>
    This page contains the global options for your blog.
  </p>
<% end %>

<h1>Blog Settings</h1>
<div class="info_container">
  <table class="in_place_editing">
  <tr>
    <td class="field_label">Title:</td>
    <td>
      <span id="configuration_title_container"><%= @settings.title %> <a href="#" id="edit_configuration_title">edit</a></span>
      <%= text_field :name => "title", :value => @settings.title, :size => 30, :style => 'display:none', :id => 'configuration_title' %>
    </td>
  <tr>
  <tr>
    <td class="field_label">Tag Line:</td>
  	<td>
  	  <span id="configuration_tag_line_container"><%= @settings.tag_line %> <a href="#" id="edit_configuration_tag_line">edit</a></span>
      <%= text_field :name => "tag_line", :value => @settings.tag_line, :size => 30, :style => 'display:none' %>
  	</td>
  </tr>
  </table>
</div>
